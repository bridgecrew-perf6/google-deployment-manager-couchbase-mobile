imports:
  - path: deployment.py
  - path: cluster.py
  - path: group.py
  - path: server.sh
  - path: syncGateway.sh

info:
  version: 1.0
  title: Couchbase

required:
  - serverNodeCount
  - syncgatewayNodeCount

properties:
  serverNodeCount:
    type: integer
    default: 3
    minimum: 1
    maximum: 100

  syncgatewayNodeCount:
    type: integer
    default: 2
    minimum: 0
    maximum: 100

outputs:
  deployment:
    type: string
  project:
    type: string
